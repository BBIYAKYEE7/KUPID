{
  "name": "korea-university-portal",
  "version": "1.1.0",
  "description": "고려대학교 포털 데스크탑 앱",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build:win": "electron-builder --win",
    "build:win-portable": "electron-builder --win portable",
    "build:win-installer": "electron-builder --win nsis",
    "publish": "electron-builder --mac --win --linux --publish=always"
  },
  "keywords": [
    "electron",
    "korea-university",
    "portal",
    "desktop-app"
  ],
  "author": "KUPID",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.kupid.portal",
    "productName": "고려대학교 포털",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "webview-preload.js",
      "index.html",
      "styles.css",
      "login-setup.html",
      "login-setup.css",
      "login-setup.js",
      "config.js",
      "config.json",
      "fonts/**/*",
      "images/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "images/korea.png"
    },
    "win": {
      "icon": "images/korea.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "images/korea.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "고려대학교 포털",
      "installerLanguages": ["ko-KR"],
      "language": "1042"
    }
  }
}
