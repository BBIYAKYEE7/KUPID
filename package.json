{
  "name": "korea-university-portal",
  "version": "1.0.0",
  "description": "고려대학교 포털 데스크탑 앱",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --mac --win --linux --publish=always"
  },
  "keywords": [
    "electron",
    "korea-university",
    "portal",
    "desktop-app"
  ],
  "author": "KUPID",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.kupid.portal",
    "productName": "고려대학교 포털",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "BBIYAKYEE7",
      "repo": "KUPID"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "login-setup.html",
      "login-setup.css",
      "login-setup.js",
      "config.js",
      "fonts/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "icons/icon_512x512.png"
    },
    "win": {
      "icon": "icons/icon_512x512.png"
    },
    "linux": {
      "icon": "icons/icon_512x512.png"
    }
  }
}
